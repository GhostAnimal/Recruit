<!DOCTYPE html>
<html>
  <%- include head %>
  <body>
  <div class="row">
    <%- include layout %>
    <div class="col-md-9">
      <%- include header %> 
        <form action="/changeInfo" class="col-md-4" method="POST" role="form">
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="user[email]" placeholder="Email" value="<%= user.email %>" readonly>
          </div>
          <div class="form-group">
            <label>姓名</label>
            <input type="text" class="form-control" name="user[name]" placeholder="姓名" value="<%= user.name %>" readonly>
          </div>
          <div class="form-group">
            <label>学号</label>
            <input type="text" class="form-control" name="user[studentNum]" placeholder="学号" value="<%= user.studentNum %>" readonly>
          </div>
          <div class="form-group">
            <label>身份证号</label>
            <input type="text" class="form-control" name="user[idCards]" placeholder="身份证号" value="<%= user.idCards %>" readonly>
          </div>
          <div class="form-group">
            <label>昵称</label>
            <input type="text" class="form-control" name="user[nick]" value="<%= user.nick %>"placeholder="昵称">
          </div>
          <div class="form-group">
            <label>个人简介</label>
            <textarea class="form-control" name="user[description]"><%= user.description %></textarea>
          </div>
          <button type="submit" class="btn btn-lg btn-success">修改信息</button>
        </form>
        <form action="/changePassword" method="post" class="col-md-4 col-md-offset-1">
          <div class="form-group">
            <label>密码</label>
            <input type="password" class="form-control" name="user[password]" placeholder="密码">
          </div>
          <div class="form-group">
            <label>确认密码</label>
            <input type="password" class="form-control" name="password-repeat" placeholder="确认密码">
          </div>
          <button type="submit" class="btn btn-lg btn-primary">修改密码</button>
        </form>
    </div>
  </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <%- include head %>
  <body>
  <div class="row">
    <%- include adminLayout %>
    <div class="col-md-9">
      <%- include adminHeader %> 
      <form role="form" method="post" class="col-md-8">
        <div class="form-group">
          <label>问题名</label>
          <input type="text" class="form-control" name="question[name]" placeholder="问题名">
        </div>
        <div class="form-group">
          <label>问题描述</label>
          <textarea class="form-control" name="question[description]" placeholder="问题描述"></textarea>
        </div>
        <div class="form-group">
          <label>分类</label><br>
          <% categories.forEach(function (category) { %>
          <%= category.name %><input type="radio" name="question[category]" value="<%= category._id %>">            
          <% }) %>
        </div>
        <div class="form-group">
          <label>分数</label>
          <input type="number" class="form-control" name="question[score]" placeholder="分数">
        </div>
        <div class="form-group">
          <label>截止日期</label>
          <input type="text" class="form-control" name="question[deadline]" placeholder="截止日期">
        </div>
        <div class="form-group">
          <label>是否需要提交writeup</label><br>
          是<input type="radio" name="question[needFile]" value="true">
          否<input type="radio" name="question[needFile]" value="false">
        </div>
        <div class="form-group">
          <label>附件(若不需要，可不提交)</label>
          <input type="file" class="form-control" name="question[flie]">
        </div>
        <button type="submit" class="btn btn-lg btn-info">添加</button>
      </form>
    </div>
  </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <%- include head %>
  <body>
  <div class="row">
    <%- include adminLayout %>
    <div class="col-md-9">
      <%- include adminHeader %> 
      <form role="form" id="question" method="POST" action="/addQuestion/add" enctype="multipart/form-data" class="col-md-8">
        <div class="form-group">
          <label>问题名</label>
          <input type="text" class="form-control" name="question[name]" placeholder="问题名">
        </div>
        <div class="form-group">
          <label>Tips</label>
          <input type="text" class="form-control" name="question[tips]" placeholder="Tips,请使用英文逗号分隔">
        </div>
        <div class="form-group">
          <label>问题描述</label>
          <textarea class="form-control" name="question[description]" placeholder="问题描述"></textarea>
        </div>
        <div class="form-group">
          <label>分类</label><br>
          <% categories.forEach(function (category) { %>
          <%= category.name %><input type="radio" class='tips' name="question[category]" value="<%= category._id %>">            
          <% }) %>
        </div>
        <div class="form-group">
          <label>分数</label>
          <input type="number" class="form-control" name="question[score]" placeholder="分数">
        </div>
        <div class="form-group">
          <label>截止日期</label>
          <input type="text" class="form-control" name="question[deadline]" placeholder="截止日期">
        </div>
        <div class="form-group">
          <label>是否需要提交writeup</label><br>
          是<input type="radio" name="question[needFile]" value="true">
          否<input type="radio" name="question[needFile]" value="false">
        </div>
        <div class="form-group">
          <label>FLAG(若需要提交writeup则不填)</label>
          <input type="text" class="form-control" name="question[flag]" placeholder="FLAG">          
        </div>
        <div class="form-group">
          <label>附件(若不需要，可不提交)</label>
          <input type="file" class="form-control" name="uploadPoster">
        </div>
        <input type="hidden" name="question[file]" value="">
        <button type="submit" id="add" class="btn btn-lg btn-info">添加</button>
      </form>
    </div>
  </div>
  <!-- <script type="text/javascript" src='/javascripts/addQuestion.js'></script> -->
  </body>
</html>
